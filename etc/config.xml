<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <swedbank_pay>
            <checkout>
                <active>0</active>
                <required>0</required>
            </checkout>
        </swedbank_pay>
        <payment>
            <swedbank_pay_checkout>
                <model>SwedbankPayPaymentMenuFacade</model>
                <title>SwedbankPay Payment Menu</title>
                <payment_action>authorize</payment_action>
                <active>0</active>
                <group>swedbank_pay</group>
                <allowspecific>0</allowspecific>
                <order_status>processing</order_status>
                <!-- Begin variables for virtual type -->
                <can_order>0</can_order>
                <can_authorize>0</can_authorize>
                <can_capture>1</can_capture>
                <can_fetch_transaction_information>1</can_fetch_transaction_information>
                <can_capture_partial>1</can_capture_partial>
                <can_capture_once>0</can_capture_once>
                <can_refund>1</can_refund>
                <can_refund_partial_per_invoice>1</can_refund_partial_per_invoice>
                <can_void>1</can_void>
                <can_cancel>1</can_cancel>
                <can_use_internal>0</can_use_internal>
                <can_use_checkout>1</can_use_checkout>
                <can_edit>0</can_edit>
                <is_gateway>1</is_gateway>
                <is_offline>0</is_offline>
                <can_initialize>1</can_initialize>
                <can_review_payment>0</can_review_payment>
                <can_use_for_multishipping>0</can_use_for_multishipping>
                <!-- End variables for virtual type -->
            </swedbank_pay_checkout>
        </payment>
    </default>
</config>